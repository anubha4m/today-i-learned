// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// NextAuth.js required models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// User model with profile and settings
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?   // For credentials auth (hashed)
  bio           String?   // Short bio/description
  isPublic      Boolean   @default(false) // Profile visibility
  theme         String    @default("dark") // dark or light
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts     Account[]
  sessions     Session[]
  entries      Entry[]
  bookmarks    Bookmark[]
  followers    Follow[]      @relation("following") // Users who follow this user
  following    Follow[]      @relation("follower")  // Users this user follows
  likes        Like[]        // Entries this user has liked
  comments     Comment[]     // Comments this user has made
  savedEntries SavedEntry[]  // Entries this user has saved/bookmarked
}

// Follow relationship for friends/followers
model Follow {
  id          String   @id @default(cuid())
  followerId  String
  followingId String
  status      String   @default("pending") // pending, accepted
  createdAt   DateTime @default(now())

  follower  User @relation("follower", fields: [followerId], references: [id], onDelete: Cascade)
  following User @relation("following", fields: [followingId], references: [id], onDelete: Cascade)

  @@unique([followerId, followingId])
}

// TIL Entry with user ownership and visibility
model Entry {
  id         String   @id @default(cuid())
  content    String   // Rich text HTML content
  visibility String   @default("private") // public, private, friends
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  likes        Like[]
  comments     Comment[]
  savedBy      SavedEntry[]
}

// Like on an entry
model Like {
  id        String   @id @default(cuid())
  userId    String
  entryId   String
  createdAt DateTime @default(now())

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  entry Entry @relation(fields: [entryId], references: [id], onDelete: Cascade)

  @@unique([userId, entryId])
}

// Comment on an entry
model Comment {
  id        String   @id @default(cuid())
  content   String
  userId    String
  entryId   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  entry Entry @relation(fields: [entryId], references: [id], onDelete: Cascade)
}

// Saved/Bookmarked entry (for reading later)
model SavedEntry {
  id        String   @id @default(cuid())
  userId    String
  entryId   String
  createdAt DateTime @default(now())

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  entry Entry @relation(fields: [entryId], references: [id], onDelete: Cascade)

  @@unique([userId, entryId])
}

// Bookmark with user ownership
model Bookmark {
  id        String   @id @default(cuid())
  url       String
  title     String?
  notes     String?  // What I learned from this URL
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
